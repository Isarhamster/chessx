.mainline {font-weight: @MainLineFontWeight@; color: @MainLineMoveColor@}\n
.variation-inline {font-weight: normal; color: @VariationColor@}\n
.variation-indent {margin-left: 30px; font-weight: normal; color: @VariationColor@}\n
